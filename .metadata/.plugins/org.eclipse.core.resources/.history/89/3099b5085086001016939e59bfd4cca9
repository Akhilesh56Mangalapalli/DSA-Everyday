package Arrays.Day3;

public class NextPermutation {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int[] arr= {2,4,1,7,5,0};
		nextPermutaion(arr);
		for(int i:arr) {
			System.out.print(i+" ");
		}
	}
	static void nextPermutaion(int[] arr) {
		int n=arr.length;
		int pivot=0;
		int pivot_position=-1;
		for(int i=n-2;i>=0;i--) {
			if(arr[i]<arr[i+1]) {
				pivot=arr[i];
				pivot_position=i;
				break;
			}
		}
		
		for(int i=n-1;i>pivot_position;i--) {
			if(arr[i]>pivot) {
				arr[pivot_position]=arr[i];
				arr[i]=pivot;
				break;
			}
		}
		if(pivot==0) {
			reversal(arr,0,n-1);
		}
		else {
			reversal(arr,pivot_position+1,n-1);
		}
		
	}
	static void reversal(int[] arr,int l,int r) {
		while(l<r) {
			int temp=arr[l];
			arr[l]=arr[r];
			arr[r]=temp;
			l++;
			r--;
		}
	}

}
